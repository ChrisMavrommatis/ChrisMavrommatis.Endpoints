<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PackageId>ChrisMavrommatis.Endpoints</PackageId>
		<Title>ChrisMavrommatis.Endpoints</Title>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Chris Mavrommatis</Authors>
		<PackageProjectUrl>https://github.com/ChrisMavrommatis/ChrisMavrommatis.Endpoints</PackageProjectUrl>
		<RepositoryUrl>https://github.com/ChrisMavrommatis/ChrisMavrommatis.Endpoints</RepositoryUrl>
		<Version>2.0.2</Version>
		<PackageIcon>package-icon.png</PackageIcon>
		<AssemblyName>ChrisMavrommatis.Endpoints</AssemblyName>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<RootNamespace>ChrisMavrommatis.Endpoints</RootNamespace>
		<RepositoryType>git</RepositoryType>
		<Description>A .NET Package aimed to provide the Endpoint pattern in your projects using classic Controllers.</Description>
		<PackageTags>ASP.NET Core;API Design;Endpoints;Endpoint Pattern</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
		<None Include="..\..\package-icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="8.1.0" />
	</ItemGroup>

</Project>
